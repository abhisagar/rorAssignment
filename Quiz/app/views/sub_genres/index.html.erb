<p id="notice"><%= notice %></p>

<h1 class="w3-container w3-green">Sub Genres</h1>

<table class="w3-table w3-bordered w3-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_genres.each do |sub_genre| %>
      <tr>
        <td><%= sub_genre.name %></td>
        <td><%= sub_genre.genre_name %></td>
        <td><%= link_to 'Show', sub_genre %></td>
        <td><%= link_to 'Edit', edit_sub_genre_path(sub_genre) %></td>
        <td><%= link_to 'Destroy', sub_genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Sub Genre', new_sub_genre_path %> | 
