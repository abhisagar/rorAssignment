<head>
  <style>
      p.yo:hover {
        background-color: red;
    }
  </style>
</head>

<p id="notice"><%= notice %></p>

<h1 class="w3-container w3-blue">Genres</h1>
<% if user_signed_in? %>
  <% user = User.find(current_user.id) %>
<% end %>
<table class="w3-table w3-bordered w3-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre %></td>
        <% if admin_signed_in? %>
                <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <% end %>
        <% if admin_signed_in? %>
                <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
<br />
<% if admin_signed_in? %>
        <%= link_to 'New Genre', new_genre_path %>
        <p class="yo"><%= link_to "Access all questions", questions_path %></p>
<% end %>

<%= link_to 'Back', "/" %>
